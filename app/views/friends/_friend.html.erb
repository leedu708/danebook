<div class="col-md-6">
  <div class="panel panel-default">
    <div class="panel-body">

      <div class="row friend-wrapper">

        <div class="col-xs-3">
          <%= link_to user_path(friend) do %>
            <%= image_tag 'user_silhouette_generic.gif', alt: "#{friend.profile.full_name}'s photo" %>
          <% end %>
        </div>

        <div class="col-xs-5">
          <div class="vcenter">
            <%= link_to friend.profile.full_name, user_path(friend) %>
            <p><%= "#{friend.friended_users.count} Friends" %></p>
          </div>
        </div>

        <div class="col-xs-4">
          <div class="vcenter">
          <!-- friend helper method -->
            <%= friend_unfriend_button(friend) if signed_in_user? %>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>