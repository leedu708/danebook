<main class="container content-container">

  <%= render :partial => "shared/header", :locals => { :user => @user } %>

<!-- Start of main Timeline section -->
  <section id="timeline" class="row">
    <div class="row">

<!-- LEFT side -->

      <div class="col-lg-5 visible-lg">

  <!-- row for Basic Info  -->
        <div class="row">
          <div class="col-xs-12">

            <div class=" panel panel-primary">

              <div class="panel-heading">

                <h3 class="panel-title text-center">
                  About
                </h3>

              </div>

              <div class="panel-body col-sm-offset-1">

                <p>
                  <strong>Born on: </strong>
                  <%= @user.profile.birthdate.to_formatted_s(:long_ordinal) %>
                </p>
                <p>
                  <strong>Went to school at: </strong>
                  <%= @user.profile.college %>
                </p>
                <p><strong>
                  Hometown: </strong>
                  <%= @user.profile.hometown %>
                </p>
                <p><strong>
                  Currently lives: </strong>
                  <%= @user.profile.currently_lives %>
                </p>

              </div>

            </div> <!-- end of panel -->

          </div> <!-- end of col -->

        </div> <!-- end of row -->
<!-- end of Basic Info -->

  <!-- row for Photos  -->
        <div class="row">
          <div class="col-xs-12">

            <div class=" panel panel-primary">

              <div class="panel-heading">

                <h3 class="panel-title text-center">
                  Photos <small>(123)</small>
                </h3>

              </div>

              <div class="panel-body">

                <% 3.times do %>
                  <div class="row">
                    <% 3.times do %>
                      <%= render "static_pages/timeline/timeline_photo" %>
                    <% end %>
                  </div>
                <% end %>

                <div class="col-xs-12 text-center">

                  <%= link_to "See more photos", photos_path, alt: "See more photos" %>

                </div>

              </div> <!-- end of panel body -->

            </div> <!-- end of panel -->

          </div> <!-- end of col -->

        </div> <!-- end of row -->
<!-- end of Photos panel -->

<!-- row for Friends  -->
        <div class="row">
          <div class="col-xs-12">
            <%= render :partial => 'posts/friends', :locals => { :user => @user, :friends => @friends } unless @friends.empty? %>
          </div>
        </div>

      </div>
<!-- end of LEFT side -->

<!-- RIGHT side -->

      <div class="col-lg-7">

<!-- MAKE POST -->
        <%= render :partial => 'new', :locals => { :user => @user, :new_post => @new_post } if @user == current_user %>

        <div data-content='posts'>
          <%= render @posts %>
        </div>

      </div>
<!-- end of RIGHT side -->

    </div>
  </section>
</main> <!-- container -->